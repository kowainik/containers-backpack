import Prelude hiding (lookup, null)


data Map k v
class Key k

instance (Show k, Show v) =>   Show (Map k v)
instance (  Eq k,   Eq v) =>     Eq (Map k v)

empty         :: Map k v
singleton     :: Key k => k -> v -> Map k v
fromList      :: Key k => [(k, v)] -> Map k v

