null          :: Map k v -> Bool
size          :: Map k v -> Int
member        :: Key k => k -> Map k a -> Bool
lookup        :: Key k => k -> Map k v -> Maybe v
lookupDefault :: Key k => v -> k -> Map k v -> v

-- TODO: these two functions require constraints
toList :: Key k => Map k v -> [(k, v)]
keys   :: Key k => Map k v -> [k]
elems  :: Map k v -> [v]

